<h6 class='portfolio-name'><%= @portfolio.name %></h6>

<p class='portfolio-created mb-4'><%= t('portfolios.table.created') %> - <%= @portfolio.created_at.strftime('%d.%m.%Y') %></p>

<div class='portfolio-cashes-list'>
  <% if @cashes.income.exists? %>
    <div class='portfolio-cashes'>
      <p>Внесенные средства</p>
      <% @cashes.income.each do |cash| %>
        <p><%= Money::Currency.new(cash.amount_currency).symbol %> <%= Money.new(cash.amount_cents) %></p>
      <% end %>
    </div>
  <% end %>

  <% if @cashes.balance.exists? %>
    <div class='portfolio-cashes'>
      <p>Баланс</p>
      <% @cashes.balance.each do |cash| %>
        <p><%= Money::Currency.new(cash.amount_currency).symbol %> <%= Money.new(cash.amount_cents) %></p>
      <% end %>
    </div>
  <% end %>
</div>
