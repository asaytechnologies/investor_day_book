<h6 class='portfolio-name'><%= @portfolio.name %></h6>

<p class='portfolio-created mb-4'><%= t('portfolios.table.created') %> - <%= @portfolio.created_at.strftime('%d.%m.%Y') %></p>

<div class='portfolio-cashes-list'>
  <% unless incomes.empty? %>
    <div class='portfolio-cashes'>
      <p><%= t('portfolios.table.incomes') %>: <%= incomes %></p>
    </div>
  <% end %>

  <% unless balance.empty? %>
    <div class='portfolio-cashes'>
      <p><%= t('portfolios.table.balance') %>: <%= balance %></p>
    </div>
  <% end %>
</div>
