<div class='sidebar' v-show='isSidebarOpen'>
  <div class='sidebar-header'>
    <h5 class='sidebar-title'><%= @title %></h5>
    <button type='button' class='close' @click.prevent='hideSidebar()'>
      <span>&times;</span>
    </button>
  </div>
  <div class='sidebar-content'>
    <%= content %>
  </div>
</div>
