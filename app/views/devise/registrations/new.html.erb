<%= render PageWrappers::DeviseComponent.new do %>
  <h2><%= t('devise.title') %></h2>
  <p class='account_existing'>
    <%= t('devise.have_account') %>
    <%= link_to t('devise.sign_in'), new_user_session_path %>
  </p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class='form-field'>
      <%= f.label :email, class: 'form-label', value: t('devise.email') %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-value' %>
    </div>

    <div class='form-field'>
      <%= f.label :password, class: 'form-label' do %>
        <em><%= t('devise.password') %> (<%= t('devise.minimum', amount: @minimum_password_length) %>)</em><br />
      <% end %>
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-value' %>
    </div>

    <div class='form-field'>
      <%= f.label :password_confirmation, class: 'form-label', value: t('devise.password_confirmation') %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-value' %>
    </div>

    <div class='actions'>
      <%= f.submit t('devise.sign_up'), class: 'button button-lg' %>
    </div>
  <% end %>
<% end %>
