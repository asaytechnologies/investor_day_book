<%= render PageWrappers::DeviseComponent.new do %>
  <h2><%= t('devise.sign_in') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='form-field'>
      <%= f.label :email, class: 'form-label', value: t('devise.email') %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-value' %>
    </div>

    <div class='form-field'>
      <%= f.label :password, class: 'form-label', value: t('devise.password') %>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-value' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class='form-field'>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <p class='account_existing'>
      <%= t('devise.have_no_account') %>
      <%= link_to t('devise.sign_up'), new_user_registration_path %>
    </p>

    <div class='actions'>
      <%= f.submit t('devise.sign_in'), class: 'button' %>
    </div>
  <% end %>
<% end %>
